#10
# Take the str parameter being passed and return the string with the letters in
# alphabetical order (ie. hello becomes ehllo). Assume numbers and punctuation
# symbols will not be included in the string.

def alphabet_soup(str)
  ary = str.split()
  sorted_words = sort_words(ary)
  sorted_words.join(" ")
end

def sort_words(ary)
  ary.map { |word| word.split("").sort.join }
end

alphabet_soup("hello")
alphabet_soup("hello there")
